<Window x:Class="PunFinder9000.ResultText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Result Text" Height="650" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions >
        <FlowDocumentReader Grid.Row="0">
            <FlowDocument x:Name="uxDoc" TextAlignment="Left" ColumnWidth="800" ColumnGap="0">
                
            </FlowDocument>
        </FlowDocumentReader>
        <Button Grid.Row="1" Height="24" Width="44" Margin="4" HorizontalAlignment="Right" Content="Print" Click="PrintButton_Click"/>
    </Grid>
</Window>
